{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    /*
      TSLint Rules doc: https://palantir.github.io/tslint/rules/
    */
    /*
      TypeScript Specific Rules
    */
    "adjacent-overload-signatures": true,
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order":[
          "public-static-field",
          "protected-static-field",
          "private-static-field",
          "public-instance-field",
          "protected-instance-field",
          "private-instance-field",
          "public-constructor",
          "protected-constructor",
          "private-constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "no-any": false,
    "no-empty-interface": false,
    "no-inferrable-types": false,
    "no-internal-module": true,
    "no-magic-numbers": [true, -1, 0, 1],
    "no-namespace": true,
    "no-reference": true,
    "no-var-requires": true,
    "no-unused-variable": true,
    "only-arrow-functions": [
      true
    ],
    "prefer-for-of": false,
    "promise-function-async": false,
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "property-declaration",
      "variable-declaration",
      "member-variable-declaration"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "unified-signatures": false,
    /*
      Functionality  Rules
    */
    "await-promise": false,
    "ban": false,
    "curly": true,
    "forin": false,
    "import-blacklist": false,
    "label-position": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-console": [
      true,
      "log"
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": false,
    "no-eval": true,
    "no-floating-promises": [true],
    "no-for-in-array": true,
    "no-inferred-empty-object-type": false,
    "no-invalid-this": true,
    "no-misused-new": true,
    "no-null-keyword": false,
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    //"no-unbound-method": true, //Bug
    "no-unsafe-any": true,
    "no-unsafe-finally": true,
    "no-unused-expression": true,
    //"no-unused-new": true,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    //"no-void-expression": true, //Bug
    "radix": false,
     "restrict-plus-operands": true,
    "strict-boolean-expressions": false,
    //"strict-type-predicates": true, //Bug
    "switch-default": false,
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typeof-compare": true,
    "use-isnan": true,
    /*
      Maintainability  Rules
    */
    "cyclomatic-complexity": [
      false,
      15
    ],
    "eofline": false,
    "indent": [
      true,
      "spaces",
      2
    ],
    "linebreak-style": false,
    "max-classes-per-file": [
      false
    ],
    "max-file-line-count": [
      true,
      300
    ],
    "no-default-export": true,
    "no-mergeable-namespace": true,
    "no-require-imports": true,
    "no-trailing-whitespace": true,
    "object-literal-sort-keys": false,
    "prefer-const": true,
    "trailing-comma": [
      false
    ],
    /*
      Style  Rules
    */
    "align": [
      true,
      "parameters",
      "arguments",
      "statements"
    ],
    "array-type": [
      true,
      "generic"
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "arrow-return-shorthand": true,
    "callable-types": true,
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "completed-docs": false,
    "file-header": [
      false
    ],
    "import-spacing": true,
    "interface-name": [
      true
    ],
    "interface-over-type-literal": true,
    "jsdoc-format": true,
    "new-parens": true,
    //"no-angle-bracket-type-assertion": true, //Bug
    "no-boolean-literal-compare": false,
    "no-consecutive-blank-lines": [
      true,
      1
    ],
    "no-parameter-properties": false,
    "no-unnecessary-initializer": false,
    //"no-unnecessary-qualifier": true,  //Bug
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "object-literal-shorthand": true,
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "one-variable-per-declaration": [
      true,
      "ignore-for-loop"
    ],
    "ordered-imports": false,
    "prefer-function-over-method": false,
    "prefer-method-signature": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "variable-name": [
      true,
      "check-format"
    ],
    "whitespace": [
      true,
      "check-decl",
      "check-module",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast"
    ],
    /*
      Codelyser  Rules
    */
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ],
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "no-attribute-parameter-decorator": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "no-forward-ref": true,
    "use-life-cycle-interface": false,
    "use-pipe-transform-interface": true,
    "pipe-naming": [
      true,
      "camelCase",
      "app"
    ],
    "component-class-suffix": true,
    "directive-class-suffix": true,
    "templates-use-public": false,
    "no-access-missing-member": false,
    "invoke-injectable": true
  }
}
